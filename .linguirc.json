{
  "catalogs": [
    {
      "path": "src/locales/{locale}/messages",
      "include": ["src"]
    }
  ],
  "format": "po",
  "formatOptions": {
    "lineNumbers": false
  },
  "orderBy": "messageId",
  "fallbackLocales": {
    "default": "en"
  },
  "locales": ["en", "zh", "ru", "tr"],
  "sourceLocale": "en"
}
