{
  "name": "@juice.work/juicehouse",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "app:build": "yarn workspace @juice.work/app build --max-old-space-size=12288",
    "app:build-ae": "yarn app:build && yarn bundle-ae-dist",
    "bundle-ae-dist": "cd packages/app && rm -rf dist && mkdir dist && cp -R build dist/ && cp app.yaml dist/app.yaml",
    "app:eject": "yarn workspace @juice.work/app eject",
    "app:test": "yarn workspace @juice.work/app test",
    "start": "yarn workspace @juice.work/app start",
    "chain": "yarn workspace @juice.work/hardhat chain",
    "test": "yarn workspace @juice.work/hardhat test",
    "compile": "yarn workspace @juice.work/hardhat compile",
    "format": "prettier --write './packages/{app,hardhat}/!(build|node_modules|artifacts|cache)/**/*.*(js|jsx|ts|tsx)'",
    "pretty-quick": "pretty-quick --staged --pattern './packages/{app,hardhat}/!(build|node_modules|artifacts|cache)/**/*.*(js|jsx|ts|tsx)'",
    "deploy": "yarn workspace @juice.work/hardhat deploy && yarn cp-contracts-local",
    "deploy-ropsten": "yarn workspace @juice.work/hardhat deploy-ropsten && yarn cp-contracts-ropsten",
    "deploy-kovan": "yarn workspace @juice.work/hardhat deploy-kovan && yarn cp-contracts-kovan",
    "deploy-rinkeby": "yarn workspace @juice.work/hardhat deploy-rinkeby && yarn cp-contracts-rinkeby",
    "deploy-mainnet": "yarn workspace @juice.work/hardhat deploy-mainnet && yarn cp-contracts-mainnet",
    "cp-contracts-local": "cd packages/app/src/contracts && cp -R temp/ localhost/ && rm -rf temp",
    "cp-contracts-ropsten": "cd packages/app/src/contracts && cp -R temp/ ropsten/ && rm -rf temp",
    "cp-contracts-kovan": "cd packages/app/src/contracts && cp -R temp/ kovan/ && rm -rf temp",
    "cp-contracts-rinkeby": "cd packages/app/src/contracts && cp -R temp/ rinkeby/ && rm -rf temp",
    "cp-contracts-mainnet": "cd packages/app/src/contracts && cp -R temp/ mainnet/ && rm -rf temp",
    "watch": "yarn workspace @juice.work/hardhat watch",
    "accounts": "yarn workspace @juice.work/hardhat accounts",
    "balance": "yarn workspace @juice.work/hardhat balance",
    "send": "yarn workspace @juice.work/hardhat send",
    "ipfs": "yarn workspace @juice.work/app ipfs",
    "surge": "yarn workspace @juice.work/app surge",
    "s3": "yarn workspace @juice.work/app s3",
    "ship": "yarn workspace @juice.work/app ship",
    "generate": "cd packages/hardhat && npx hardhat generate",
    "mine": "cd packages/hardhat && npx hardhat mine",
    "account": "cd packages/hardhat && npx hardhat account",
    "wallet": "cd packages/hardhat && npx hardhat wallet",
    "fundedwallet": "cd packages/hardhat && npx hardhat fundedwallet",
    "flatten": "cd packages/hardhat && npx hardhat flatten",
    "graph-run-node": "cd docker/graph-node && docker-compose up",
    "graph-remove-node": "cd docker/graph-node && docker-compose down",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @juice.work/subgraph graph codegen",
    "graph-build": "yarn workspace @juice.work/subgraph graph build",
    "graph-create-local": "yarn workspace @juice.work/subgraph graph create --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-remove-local": "yarn workspace @juice.work/subgraph graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-deploy-local": "yarn workspace @juice.work/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract",
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick && yarn compile"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "pretty-quick": "^3.1.0"
  }
}
